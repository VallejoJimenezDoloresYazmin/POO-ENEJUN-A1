// establece el tamaño de mi sketch
size(400,400);
//establece el color del fondo
background(255,0,0);
//establece el color de relleno
fill(90,45,255,255);
//establece el color de las lineas de contorno
stroke(255,255,0);
//elimina las lineas
//noStroke();
//elimina el relleno
//noFill();
//dibuja un rect en x,y, con w,h
rect(20,20,20,20);
//dibuja una elipse con el centro en x.y. con w,y
fill(0,255,0);
ellipse(60,20,20,20);
//modifica el ancho de las lineas
strokeWeight(20);
//dibuja una linea de x1,y1 a x2,y2
line(0,200,400,200);
